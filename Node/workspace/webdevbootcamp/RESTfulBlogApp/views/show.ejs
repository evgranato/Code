<%- include("partials/header")%>
<div class="ui main text container segment" id="container">
    <div class="ui huge header"><%=blog.title%></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%=blog.image%>" alt="">
        </div>
        <div class="content">
            <span><%=blog.created.toDateString()%></span>
        </div>
        <div class="description">
            <p><%-blog.body%></p>
        </div>
        <div class="ui items">
            <a class="ui orange basic button" href="/blogs/<%=blog._id%>/edit">Edit</a>
            <form id="delete" method="POST" action="/blogs/<%=blog._id%>?_method=DELETE">
                <button class="ui red basic button">Delete</button>
            <a class="ui violet basic button" href="/blogs">Go Back</a>
            </form>
        </div>
        
    </div>
</div>

<%- include("partials/footer")%>