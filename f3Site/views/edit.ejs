<%- include("partials/header")%>
<div class="ui main text container segment" id="container">
    <div class="ui huge header">Edit <%=bb.title %></div>
    <form action="/backblasts/<%=bb._id%>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="bb[title]" value="<%=bb.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <div class="item">
                <img class="ui centered rounded image small" src="<%=bb.image%>" alt="">
            </div>
            <input type="text" name="bb[image]" value="<%=bb.image%>">
        </div>
        <div class="field">
            <label>Backblast Content</label>
            <textarea name="bb[body]" id="" cols="30" rows="10"><%=bb.body%></textarea>
        </div>
        <div class=""></div>
        <input class="ui violet big basic button" type="submit"></input>
    </form>
</div>

<%- include("partials/footer")%>