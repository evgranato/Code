
<%- include("partials/header")%>
<div class="ui main text container segment" id="container">
    <div class="ui huge header">Edit <%=blog.title %></div>
    <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <div class="item">
                <img class="ui centered rounded image small" src="<%=blog.image%>" alt="">
            </div>
            <input type="text" name="blog[image]" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"><%=blog.body%></textarea>
        </div>
        <div class=""></div>
        <input class="ui violet big basic button" type="submit"></input>
    </form>
</div>

<%- include("partials/footer")%>