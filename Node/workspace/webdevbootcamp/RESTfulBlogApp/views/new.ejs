<%- include("partials/header")%>
<div class="ui main text container segment" id="container">
    <div class="ui huge header">New Blog</div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"></textarea>
        </div>
        <div class=""></div>
        <input class="ui violet big basic button" type="submit"></input>
    </form>
</div>

<%- include("partials/footer")%>